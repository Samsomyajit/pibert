{
  "data": { "root": "cfdb_tube_npz", "format": "npz" },

  "models": ["PIBERT"],
  "model_cfg": {
    "PIBERT": {
      "d": 96, "depth": 4, "heads": 4, "mlp": 384,
      "fourier_modes": 12, "patch": 4,
      "nu": 1e-3, "w_div": 1.0, "w_vort": 1.0
    }
  },

  "train": {
    "epochs": 70,
    "batch_size": 2,
    "seed": 42,
    "seeds": [42],
    "lr": 5e-4,
    "weight_decay": 1e-4,
    "warmup_epochs": 15,
    "eta_min": 1e-5,

    "lambda_phys": 0.0,
    "phys_start": 60,
    "phys_warmup": 120,

    "clip_norm": 0.7,
    "micro_batch_size": 0,
    "device": "mps",
    "grad_loss_w": 1e-3
  },

  "ema": { "enabled": false,  "decay": 0.999  },

  "eval": {
    "outdir": "results_tube_pibert_refit",
    "save_n": 80,
    "latency_reps": 0,
    "eval_every": 25,
    "max_val_batches": 4
  },

  "amp": { "enabled": true, "dtype": "fp16" }
}
